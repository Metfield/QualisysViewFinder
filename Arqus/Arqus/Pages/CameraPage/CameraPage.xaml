<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:urho="clr-namespace:Urho.Forms;assembly=Urho.Forms"
             xmlns:ui="clr-namespace:Arqus.UI"
             Title="Camera Page"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"             
             x:Class="Arqus.CameraPage">

    <ContentPage.ToolbarItems>
       
        <ui:BindableToolbarItem Command="{Binding SetCameraScreenLayoutCommand}" IsVisible="{Binding IsGridLayoutActive, Converter={StaticResource InverseBoolConverter}}">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource"
                                Android="drawable-hdpi/ic_grid_on_black_24dp.png"/>
            </ToolbarItem.Icon>
        </ui:BindableToolbarItem>
        <ui:BindableToolbarItem Command="{Binding SetCameraScreenLayoutCommand}" IsVisible="{Binding IsGridLayoutActive}">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource"
                                Android="drawable-hdpi/ic_view_carousel_black_24dp.png"/>
            </ToolbarItem.Icon>
        </ui:BindableToolbarItem>
    </ContentPage.ToolbarItems>

    <StackLayout VerticalOptions="FillAndExpand">
        
        <urho:UrhoSurface x:Name="urhoSurface" VerticalOptions="FillAndExpand" />
        
        <!-- Drawers layout -->
        <StackLayout VerticalOptions="End" IsEnabled="True">
            
            <!-- Marker-specific drawer -->
            <Frame x:Name="markerDrawer" HorizontalOptions="Fill" VerticalOptions="FillAndExpand" BackgroundColor="Gray" IsVisible="False">
                <StackLayout VerticalOptions="StartAndExpand">
                    <StackLayout HorizontalOptions="Fill">
                        <Label Text="Marker Exposure" HorizontalOptions="Start"/>
                        <Label Text="{Binding MarkerExposureValueLabel}" HorizontalOptions="End"/>
                    </StackLayout>
                        
                    <Slider HorizontalOptions="Fill" Maximum="{Binding MarkerExposureSliderMax}" 
                                                     Minimum="{Binding MarkerExposureSliderMin}"
                                                     Value="{Binding MarkerExposureSliderValue}"/>
                    <StackLayout HorizontalOptions="Fill">
                        <Label Text="Marker Threshold"/>
                        <Label Text="{Binding MarkerThresholdValueLabel}" HorizontalOptions="End"/>
                    </StackLayout>
                <Slider HorizontalOptions="Fill" Maximum="{Binding MarkerThresholdSliderMax}"
                                                     Minimum="{Binding MarkerThresholdSliderMin}"
                                                     Value="{Binding MarkerThresholdSliderValue}"/>
                </StackLayout>
            </Frame>

            <!-- Video-specific drawer -->
            <Frame x:Name="videoDrawer" HorizontalOptions="Fill" VerticalOptions="FillAndExpand" BackgroundColor="Gray" IsVisible="False">
                <StackLayout VerticalOptions="StartAndExpand">
                    <StackLayout HorizontalOptions="Fill">
                        <Label Text="Video Exposure"/>
                        <Label Text="{Binding VideoExposureValueLabel}" HorizontalOptions="End"/>
                    </StackLayout>
                <Slider HorizontalOptions="Fill" Maximum="{Binding VideoExposureSliderMax}" 
                                                     Minimum="{Binding VideoExposureSliderMin}"
                                                     Value="{Binding VideoExposureSliderValue}" />
                    <StackLayout HorizontalOptions="Fill">
                        <Label Text="Video Flash"/>
                        <Label Text="{Binding VideoFlashValueLabel}" HorizontalOptions="End"/>
                    </StackLayout>
        <Slider HorizontalOptions="Fill" Maximum="{Binding VideoFlashSliderMax}" 
                                                     Minimum="{Binding VideoFlashSliderMin}"
                                                     Value="{Binding VideoFlashSliderValue}" />
                </StackLayout>
            </Frame>
        </StackLayout>


        <Grid VerticalOptions="End" IsVisible="{Binding IsGridLayoutActive, Converter={StaticResource InverseBoolConverter}}">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <BoxView Color="{StaticResource primaryColor}" Grid.ColumnSpan="3" Grid.Row="0"/>

            <Image  Source="drawable-hdpi/ic_grain_black_24dp.png" Grid.Row="0" Grid.Column="0">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer
                Command="{Binding SetCameraModeToMarkerCommand}"  />
                </Image.GestureRecognizers>
            </Image>
            <Image Source="drawable-hdpi/ic_camera_black_24dp.png" Grid.Row="0" Grid.Column="1">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer
                Command="{Binding SetCameraModeToVideoCommand}"  />
                </Image.GestureRecognizers>
            </Image>
            <Image  Source="drawable-hdpi/ic_exposure_black_24dp.png" Grid.Row="0" Grid.Column="2">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer
                    Command="{Binding SetCameraModeToIntensityCommand}"  />
                </Image.GestureRecognizers>
            </Image>
        </Grid>

    </StackLayout>


</ContentPage>