<ContentView   xmlns="http://xamarin.com/schemas/2014/forms"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="Arqus.QTMServerList"
        xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
        >
    <StackLayout    
                HorizontalOptions="Fill"
                VerticalOptions="Fill">
        <Label Text="Pull to refresh" IsVisible="{Binding QTMServers, Converter={StaticResource DataSourceConverter}}"/>
        <ListView 
            SeparatorColor="#101010"
            HorizontalOptions="FillAndExpand"
            ItemsSource="{Binding QTMServers}"
            SelectedItem="{Binding SelectedServer, Mode=TwoWay}"
            IsPullToRefreshEnabled="true"
            RefreshCommand="{Binding RefreshQTMServers}"
            IsRefreshing="{Binding IsRefreshing}"
            HasUnevenRows="true"
          >

            <ListView.ItemTemplate>

                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="5">

                            <Label Text="{Binding HostName}" />
                            <Label Text="{Binding Details}"
                 FontSize="Micro" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentView>
    