<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:urho="clr-namespace:Urho.Forms;assembly=Urho.Forms"
             Title="Camera Page"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"             
             x:Class="Arqus.CameraPage">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding SetCameraModeToMarkerCommand}" >
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource"
                                Android="drawable-hdpi/ic_grain_black_24dp.png"/>
            </ToolbarItem.Icon>
        </ToolbarItem>
        <ToolbarItem Command="{Binding SetCameraModeToVideoCommand}">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource"
                                Android="drawable-hdpi/ic_camera_black_24dp.png"/>
            </ToolbarItem.Icon>
        </ToolbarItem>
        <ToolbarItem Command="{Binding SetCameraModeToIntensityCommand}">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource"
                                Android="drawable-hdpi/ic_exposure_black_24dp.png"/>
            </ToolbarItem.Icon>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <StackLayout VerticalOptions="FillAndExpand">
        
        <urho:UrhoSurface x:Name="urhoSurface" VerticalOptions="FillAndExpand" />
        
        <!-- Drawers layout -->
        <StackLayout VerticalOptions="End" IsEnabled="True">
            
            <!-- Marker-specific drawer -->
            <Frame x:Name="markerDrawer" HorizontalOptions="Fill" VerticalOptions="FillAndExpand" BackgroundColor="Gray" IsVisible="False">
                <StackLayout VerticalOptions="StartAndExpand">
                    <Label Text="Marker Exposure"/>
                    <Slider HorizontalOptions="Fill" Maximum="{Binding MarkerExposureSliderMax}" 
                                                     Minimum="{Binding MarkerExposureSliderMin}"
                                                     Value="{Binding MarkerExposureSliderValue}"/>

                    <Label Text="Marker Threshold"/>
                    <Slider HorizontalOptions="Fill" Maximum="{Binding MarkerThresholdSliderMax}"
                                                     Minimum="{Binding MarkerThresholdSliderMin}"
                                                     Value="{Binding MarkerThresholdSliderValue}"/>
                </StackLayout>
            </Frame>

            <!-- Video-specific drawer -->
            <Frame x:Name="videoDrawer" HorizontalOptions="Fill" VerticalOptions="FillAndExpand" BackgroundColor="Gray" IsVisible="False">
                <StackLayout VerticalOptions="StartAndExpand">
                    <Label Text="Video Exposure"/>
                    <Slider HorizontalOptions="Fill" Maximum="{Binding VideoExposureSliderMax}" 
                                                     Minimum="{Binding VideoExposureSliderMin}"
                                                     Value="{Binding VideoExposureSliderValue}" />
                    <Label Text="Video Flash"/>
                    <Slider HorizontalOptions="Fill" Maximum="{Binding VideoFlashSliderMax}" 
                                                     Minimum="{Binding VideoFlashSliderMin}"
                                                     Value="{Binding VideoFlashSliderValue}" />
                </StackLayout>
            </Frame>
        </StackLayout>

    </StackLayout>

